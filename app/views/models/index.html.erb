<h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Мои 3D-модели</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-4">
  <% @models.each do |model| %>
    <div class="bg-white shadow-lg rounded-xl p-4 transform hover:scale-105 transition">
      <div class="w-full h-48 bg-gray-200 rounded-md overflow-hidden">
        <div class="three-preview" data-obj-url="<%= rails_blob_url(model.file) %>"></div>
      </div>

      <h2 class="text-lg font-semibold text-gray-800 mt-2">
        <%= link_to model.name, user_model_path(current_user, model), class: "hover:text-blue-600 transition" %>
      </h2>

      <p class="text-sm text-gray-500 mt-1"><%= truncate(model.description, length: 100) %></p>
    </div>
  <% end %>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag "lib/index_models", type: "module", defer: true %>
<% end %>
